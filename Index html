<script>
  const shareUrl = "https://www.roblox.com/share?code=7d1edd66ecd6f241ad12ebd71954a56a&type=Server";
  const proto = "roblox-player://v1/launch/?placeId=0&launchData=" + encodeURIComponent(JSON.stringify({shareCode:"7d1edd66ecd6f241ad12ebd71954a56a"}));
  const goBtn = document.getElementById('goBtn');
  const glow = document.getElementById('glow');
  const copyBtn = document.getElementById('copy');

  function tryOpenClientThenWeb(){
    glow.classList.add('pulse');

    try {
      const w = window.open(proto, '_blank');
      if(!w){
        const iframe = document.createElement('iframe');
        iframe.style.display = 'none';
        iframe.src = proto;
        document.body.appendChild(iframe);
        setTimeout(()=> { try{ document.body.removeChild(iframe); } catch(e){} }, 1200);
      }
    } catch(e){}

    setTimeout(()=> {
      window.open(shareUrl, '_blank', 'noopener');
      glow.classList.remove('pulse');
    }, 1800);
  }

  goBtn.addEventListener('click', (e)=>{
    e.preventDefault();
    tryOpenClientThenWeb();
  });

  copyBtn.addEventListener('click', async ()=>{
    try {
      await navigator.clipboard.writeText(shareUrl);
    } catch(err){
      const ta = document.createElement('textarea');
      ta.value = shareUrl; document.body.appendChild(ta); ta.select();
      try { document.execCommand('copy'); } catch(e){}
      document.body.removeChild(ta);
    }
  });
</script>

