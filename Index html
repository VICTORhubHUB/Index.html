    <button id="goBtn" class="btn" aria-haspopup="false">PROVAS E VÍDEOS</button>
    <div id="glow" class="glow"></div>
  </div>

  <div class="actions">
    <a id="openWeb" class="link-btn" href="https://www.roblox.com/share?code=7d1edd66ecd6f241ad12ebd71954a56a&type=Server" target="_blank" rel="noopener">Abrir</a>
    <button id="copy" class="copy-btn" title="Copiar link do servidor">Copiar</button>
  </div>

